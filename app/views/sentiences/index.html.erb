<p id="notice"><%= notice %></p>

<h1>Sentiences</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sentiences.each do |sentience| %>
      <tr>
        <td><%= sentience.name %></td>
        <td><%= link_to 'Show', sentience %></td>
        <td><%= link_to 'Edit', edit_sentience_path(sentience) %></td>
        <td><%= link_to 'Destroy', sentience, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sentience', new_sentience_path %>
