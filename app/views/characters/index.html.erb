<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Race</th>
      <th>Gender</th>
      <th>Birth date</th>
      <th>Death date</th>
      <th>Faction</th>
      <th>Birth location</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.age %></td>
        <td><%= character.race.name %></td>
        <td><%= character.gender.name %></td>
        <td><%= character.birth_date %></td>
        <td><%= character.death_date %></td>
        <td><%= character.faction.name %></td>
        <td><%= character.birth_location %></td>
        <td><%= character.bio %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

